@model IEnumerable<LearnHubAPP.Models.Categorie>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NomCategorie)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DescriptionCat)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NomCategorie)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DescriptionCat)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdCategorie">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdCategorie">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdCategorie">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
